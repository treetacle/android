<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.treetacle.lab6.MainActivity">


    <Button
        android:id="@+id/ticTac"
        android:layout_width="315dp"
        android:layout_height="209dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="38dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="16dp"
        android:onClick="gameList"
        android:text="4 in row"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inRow" />

    <Button
        android:id="@+id/inRow"
        android:layout_width="316dp"
        android:layout_height="168dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="37dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="16dp"
        android:onClick="gameList"
        android:text="TicTacToc"
        app:layout_constraintBottom_toTopOf="@+id/ticTac"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
